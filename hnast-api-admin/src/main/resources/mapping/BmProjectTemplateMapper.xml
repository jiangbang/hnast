<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.glface.modules.mapper.ProjectTemplateMapper">
    <sql id="pageSearchSql">
        from pm_project_template t
        where
        t.del_flag=0
        <if test="template.name != null and template.name != ''">
            and t.name like concat('%',#{template.name},'%')
        </if>
    </sql>
    <select id="pageSearch"  resultType="com.glface.modules.model.ProjectTemplate">
       SELECT t.*
        <include refid="pageSearchSql"/>
        <if test="page.orderBy != null and page.orderBy != ''">
        <!--使用$运算符，Mybatis不会进行预编译，直接把值传进去，无法防止sql注入-->
            order by ${page.orderBy}
        </if>
        limit #{page.start}, #{page.pageSize}
    </select>
    <select id="pageSearchCount"  resultType="int">
        SELECT count(t.id)
         <include refid="pageSearchSql"/>
    </select>
</mapper>
